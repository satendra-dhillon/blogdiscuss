<div class="container">

        <div class="row">

            <div class="col-lg-8">

          
                <h1><%= @blog.title %></h1>


                <p class="lead">
                    by <%= @blog.blogger.full_name %>
                </p>


                <p><span class="glyphicon glyphicon-time"></span> Posted on <%= time_ago_in_words(@blog.created_at) %> ago</p>

                <hr>

                <p class="lead"><%= @blog.description %></p>


                <div class="well">
                    <h4>Leave a Comment:</h4>

                    <%= form_for [@blog, Comment.new] do |f| %>
                    <div class="form-group">
                      <%= f.text_area :body, placeholder: "Add a comment", class: "form-control" %><br/>
                      </div>
                      <%= f.submit "Add Comment", class: 'btn btn-primary'%>
                    <% end %>
                  
                </div>

                <h4><%= pluralize(@blog.comments.count, "Comment") %></h4>
                      <%= render(partial: 'comments/comment', collection: @blog.comments) %>
            </div>

